<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mnhd_lyt_mainview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:background="@color/blue_9"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <ImageView
        android:id="@+id/mnhd_btn_back"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:contentDescription="@string/imgcontentdescr"
        android:src="@mipmap/back_white" />

    <com.test.alodokter.widget.TextViewFont
        android:id="@+id/mnhd_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        attrs:fontname="Champagne Limousines Bold.ttf" />

    <ImageView
        android:id="@+id/mnhd_btn_logout"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:contentDescription="@string/imgcontentdescr"
        android:src="@mipmap/logout" />
</LinearLayout>